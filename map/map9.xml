<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
            <Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

              <About>
                <Summary>Fire Escape!</Summary>
              </About>

            <ServerSection>
              <ServerInitialConditions>
                <Time>
                    <StartTime>1000</StartTime>
                    <AllowPassageOfTime>false</AllowPassageOfTime>
                </Time>
                <Weather>clear</Weather>
              </ServerInitialConditions>
              <ServerHandlers>
                  <FlatWorldGenerator generatorString="3;7,44*49,73,35:1,159:4,95:13,35:13,159:11,95:10,159:14,159:6,35:6,95:6;12;"/>
                  <DrawingDecorator>
                    <DrawSphere x="0" y="50" z="0" radius="30" type="air"/>
                    <DrawCuboid x1="0" y1="50" z1="0" x2="2" y2="50" z2="6" type="diamond_block"/>

                    <!-- Regular Diamond Blocks -->
                    <DrawLine x1="4" y1="50" z1="0" x2="4" y2="50" z2="6" type="diamond_block"/>
                    <DrawLine x1="3" y1="50" z1="0" x2="3" y2="50" z2="6" type="diamond_block"/>
                    <DrawLine x1="2" y1="50" z1="0" x2="2" y2="50" z2="6" type="diamond_block"/>
                    <DrawLine x1="1" y1="50" z1="0" x2="1" y2="50" z2="6" type="diamond_block"/>
                    <DrawLine x1="0" y1="50" z1="0" x2="0" y2="50" z2="6" type="diamond_block"/>

                    <!-- Start / End Blocks -->
                    <DrawBlock x="0" y="50" z="0" type="emerald_block"/>
                    <DrawBlock x="3" y="50" z="6" type="redstone_block"/>

                    <!-- Platforms / Platform Fires -->
                    <DrawBlock x="0" y="50" z="5" type="quartz_block"/>
                    <DrawBlock x="0" y="51" z="5" type="diamond_block"/>

                    <DrawBlock x="1" y="50" z="1" type="quartz_block"/>
                    <DrawBlock x="1" y="51" z="1" type="netherrack"/>
                    <DrawBlock x="1" y="52" z="1" type="fire"/>

                    <DrawBlock x="2" y="50" z="1" type="quartz_block"/>
                    <DrawBlock x="2" y="51" z="1" type="diamond_block"/>
                    
                    <DrawLine x1="2" y1="50" z1="3" x2="2" y2="50" z2="5" type="quartz_block"/>
                    <DrawBlock x="2" y="51" z="3" type="diamond_block"/>
                    <DrawBlock x="2" y="51" z="4" type="diamond_block"/>
                    <DrawBlock x="2" y="51" z="5" type="diamond_block"/>

                    <DrawBlock x="3" y="50" z="1" type="quartz_block"/>
                    <DrawBlock x="3" y="51" z="1" type="diamond_block"/>
                    
                    <DrawLine x1="4" y1="50" z1="3" x2="4" y2="50" z2="4" type="quartz_block"/>
                    <DrawLine x1="4" y1="51" z1="3" x2="4" y2="51" z2="4" type="diamond_block"/>

                    <!-- Gaps -->
                    <DrawBlock x="0" y="50" z="4" type="air"/>
                    <DrawBlock x="1" y="50" z="6" type="air"/>
                    <DrawBlock x="2" y="50" z="2" type="air"/>
                    <DrawBlock x="3" y="50" z="0" type="air"/>
                    <DrawBlock x="3" y="50" z="4" type="air"/>
                    <DrawBlock x="4" y="50" z="1" type="air"/>
                    <DrawBlock x="4" y="50" z="2" type="air"/>
                    <DrawBlock x="4" y="50" z="6" type="air"/>

                    <!-- Fires -->
                    <DrawBlock x="0" y="50" z="1" type="netherrack"/>
                    <DrawBlock x="0" y="51" z="1" type="fire"/>
                    <DrawBlock x="0" y="50" z="2" type="netherrack"/>
                    <DrawBlock x="0" y="51" z="2" type="fire"/>
                    <DrawBlock x="1" y="50" z="5" type="netherrack"/>
                    <DrawBlock x="1" y="51" z="5" type="fire"/>
                    <DrawLine x1="1" y1="50" z1="4" x2="1" y2="50" z2="5" type="netherrack"/>
                    <DrawLine x1="1" y1="51" z1="4" x2="1" y2="51" z2="5" type="fire"/>
                    <DrawBlock x="3" y="50" z="2" type="netherrack"/>
                    <DrawBlock x="3" y="51" z="2" type="fire"/>
                    <DrawBlock x="3" y="50" z="5" type="netherrack"/>
                    <DrawBlock x="3" y="51" z="5" type="fire"/>
                    <DrawBlock x="0" y="50" z="6" type="netherrack"/>
                    <DrawBlock x="0" y="51" z="6" type="fire"/>
                    <DrawLine x1="4" y1="50" z1="4" x2="4" y2="50" z2="5" type="netherrack"/>
                    <DrawLine x1="4" y1="51" z1="4" x2="4" y2="51" z2="5" type="fire"/>

                  </DrawingDecorator>
                  <ServerQuitFromTimeUp timeLimitMs="50000"/>
                  <ServerQuitWhenAnyAgentFinishes/>
                </ServerHandlers>
              </ServerSection>

              <AgentSection mode="Survival">
                <Name>FireEscapeBot</Name>
                <AgentStart>
                    <Placement x="0.5" y="51" z="0.5" yaw="0"/>
                </AgentStart>
                <AgentHandlers>
                    <ChatCommands/>
                    <MissionQuitCommands quitDescription="quit"/>
                    <DiscreteMovementCommands/>
                    <AgentQuitFromTouchingBlockType>
                        <Block type="redstone_block"/>
                    </AgentQuitFromTouchingBlockType>
                    <ObservationFromFullStats/>
                    <ObservationFromGrid>
                      <Grid name="floorAll">
                        <min x="-10" y="-1" z="-10"/>
                        <max x="10" y="-1" z="10"/>
                      </Grid>
                      <Grid name="fireOnTop">
                        <min x="-10" y="1" z="-10"/>
                        <max x="10" y="1" z="10"/>
                      </Grid>
                  </ObservationFromGrid>
                </AgentHandlers>
              </AgentSection>
            </Mission>